#REQUIRED Public Key - cat /home/"USER"/.ssh/id_rsa.pub
KEY="ENTER KEY.PUB"

#Curent user 
SSHUSER="my_linux_user"

#Username
USER="user"

#Password for new user
USERPASS="pass"

#Roll for new user
USERROLL="admin"

#Group for new user
USERGROUP="usergr"

RAM="1024"

#Folders
SAMBA="fileserver"

PLEX="plexmedia"


GATE4="192.168.0.1"

#Client subnet
SUBNET="192.168.0.0/24"

#SSH port
PORTSSH="22"

#Network adapter
NETADAPT=$(ip route | grep default | sed -e "s/^.*dev.//" -e "s/.proto.*//")

#Network IP
IP=$(ip route get 8.8.8.8 | sed -n '/src/{s/.*src *\([^ ]*\).*/\1/p;q}')

#Public IP
PUBIP=$(curl ifconfig.me)

#Lock SSH
FILE="/etc/ssh/sshd_config"
PARAM[1]="PermitRootLogin "
PARAM[2]="PubkeyAuthentication"
PARAM[3]="Port "
PARAM[4]="PasswordAuthentication"